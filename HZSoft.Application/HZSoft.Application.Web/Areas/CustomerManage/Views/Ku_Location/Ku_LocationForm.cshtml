            <td class="formValue">
                <input id="TypeName" type="text" class="form-control"  />
            </td>
        </tr>
        <tr>
            <td class="formTitle">面积</td>
            <td class="formValue">
                <input id="Area" type="text" class="form-control" />
            </td>
            <td class="formTitle">省份</td>
            <td class="formValue">
                <input id="Province" type="text" class="form-control"  />
            </td>
        </tr>
        <tr>
            <td class="formTitle">城市</td>
            <td class="formValue">
                <input id="City" type="text" class="form-control" />
            </td>
            <td class="formTitle">区号</td>
            <td class="formValue">
                <input id="CityCode" type="text" class="form-control"  />
            </td>
        </tr>
        <tr>
            <td class="formTitle">区县</td>
            <td class="formValue">
                <input id="District" type="text" class="form-control" />
            </td>
            <td class="formTitle">区域编码</td>
