@{;
    ViewBag.Title = "表单页面";
    Layout = "~/Views/Shared/_Form.cshtml";
}
<script>
    var keyValue = request('keyValue');
    var mobile;
    $(function () {
        initControl();
    });
    //初始化控件
    function initControl() {
        //客户级别
        $("#CustLevelId").ComboBox({
            url: "../../SystemManage/DataItemDetail/GetDataItemListJson",
            param: { EnCode: "Client_Level" },
            id: "ItemValue",
            text: "ItemName",
            description: "==请选择==",
            height: "200px"
        });
        //性别
        $("#Gender").ComboBox({
            description: "==请选择==",
        });
        //获取表单
        if (!!keyValue) {
            $.SetForm({
                url: "../../CustomerManage/ZZT_PDDCustomer/GetFormJson",
                param: { keyValue: keyValue },
                success: function (data) {
                    $("#form1").SetWebControls(data);
                    mobile = data.Mobile;
                    $("#Mobile").val(data.Mobile.replace(/^(.{3})(.{4})(.*)$/, '$1****$3'))
                }
            })
        }
    }
    //保存表单;
    function AcceptClick() {
        if (!$('#form1').Validform()) {
            return false;
        }
        var postData = $("#form1").GetWebControls(keyValue);
        var mobileText = $("#Mobile").val();
        if (mobileText.indexOf("*") > 0 && !!mobile) {
            postData["Mobile"] = mobile;
        }
        $.SaveForm({
            url: "../../CustomerManage/ZZT_PDDCustomer/SaveForm?keyValue=" + keyValue,
            param: postData,
            loading: "正在保存数据...",
            success: function () {
                $.currentIframe().$("#gridTable").trigger("reloadGrid");
            }
        })
    }
</script>
<div style="margin-top: 20px; margin-right: 30px;">
    <table class="form">
        <tr>
            <td class="formTitle">来电号码<font face="宋体">*</font></td>
            <td class="formValue">
                <input id="Mobile" type="text" onblur="$.ExistField(this.id, '../../CustomerManage/ZZT_PDDCustomer/ExistMobile')" class="form-control" isvalid="yes" checkexpession="NotNull" />
            </td>
            <td class="formTitle">订单号</td>
            <td class="formValue">
                <input id="OrderNo" type="text" class="form-control"  />
            </td>
        </tr>
        <tr>
            <td class="formTitle">购买商品</td>
            <td class="formValue">
                <input id="GoodsName" type="text" class="form-control"  />
            </td>
            <td class="formTitle">省</td>
            <td class="formValue">
                <input id="Province" type="text" class="form-control"  />
            </td>
        </tr>
        <tr>
            <td class="formTitle">市</td>
            <td class="formValue">
                <input id="City" type="text" class="form-control"  />
            </td>
            <td class="formTitle">县/区</td>
